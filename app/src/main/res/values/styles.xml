<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomToolbarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/gris</item>
        <item name="android:textColorSecondary">@color/gris</item>
        <item name="actionMenuTextColor">@color/gris</item>
        <item name="android:colorControlNormal">@color/gris</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

        <style name="ProfileOptionStyle" parent="TextAppearance.AppCompat">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:drawablePadding">10dp</item>
            <item name="android:background">?attr/selectableItemBackground</item>
            <item name="android:gravity">start|center_vertical</item>
            <item name="android:padding">16dp</item>
            <item name="android:textColor">@color/textonormal</item>
            <item name="android:textSize">14sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:backgroundTint">@android:color/transparent</item>
        </style>

</resources>