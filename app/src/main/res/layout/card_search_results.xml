<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/card_search_img_airline_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/unitedairlines" />

            <TextView
                android:id="@+id/card_search_txt_airline_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="United Airlines"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_search_txt_flight_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 hr 40min"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/card_search_txt_origin_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EZE"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/flight_icon"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/frame2" />

            <TextView
                android:id="@+id/card_search_txt_destination_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LAX"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/card_search_txt_origin_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ezeiza Ar"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/card_search_txt_destination_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Los Angeles"
                android:textSize="14sp"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="@android:color/holo_orange_light"
            android:padding="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/card_search_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Business Class"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_search_txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From $1128"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/card_search_bttn_view_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/naranja"
            android:text="View Details"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
