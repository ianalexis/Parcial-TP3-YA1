<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="142dp">

        <ImageView
            android:id="@+id/card_offers_image"
            android:layout_width="92dp"
            android:layout_height="53dp"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/card_offers_title"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="45dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/card_offers_desc"
            app:layout_constraintStart_toEndOf="@+id/card_offers_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_offers_desc"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/card_offers_image"
            app:layout_constraintTop_toBottomOf="@+id/card_offers_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>